# Environment variables for local development
NODE_ENV=development
BACKEND_PORT=3000
FRONTEND_PORT=8081

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=image_sharing

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:${BACKEND_PORT}/auth/login/google/callback

# Frontend URLs (for OAuth redirects)
WEB_FRONTEND_URL=http://localhost:${FRONTEND_PORT}/auth/callback
MOBILE_DEEP_LINK_URL=lifemapped://auth/callback

# CORS
CORS_ORIGIN=*

